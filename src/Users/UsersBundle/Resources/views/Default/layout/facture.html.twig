{% extends '::layout/layout.html.twig' %}

{% block title %} - Facture{% endblock %}
{% block body %}

<div class="container">
    <div class="row">

        <div class="col-md-3">
            {% include '::modulesUsed/navigation.html.twig' %}
            {{  render(controller('EcommerceBundle:Panier:menu')) }}
        </div>

        {% set TotalHT = 0 %}
        {% set tva = 0 %}

        <div class="col-md-9">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('warning') %}
                <div class="alert alert-warning">
                    {{ flashMessage }}
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-error">
                    {{ flashMessage }}
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                </div>
            {% endfor %}

            <h2>Factures</h2>
            <hr>
            <form>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Références</th>
                        <th>Date</th>
                        <th>Prix TTC</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if not factures %}

                        <tr><td style="text-align: center" colspan="4">Aucune facture actuellement.</td></tr>

                    {% else %}

                        {% for facture in factures %}

                            <tr>
                                <td>ref: {{ facture.reference }}</td>
                                <td>{{ facture.date|date('d/m/y h:m:s') }}</td>
                                <td>{{ facture.commande.totalTTC }} €</td>
                                <td><a href="{{ path('pdf',{ 'commande':facture.id}) }}" target="_blank"><i class="icon-download"></i></a></td>
                            </tr>

                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </form>

        </div>

    </div>
</div>
{% endblock %}