{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Liste de commandes</h2>
    <hr>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Référence</th>
                <th>Client</th>
                <th>MontantTTC</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ commande.reference }}</td>
                <td>{{ commande.user.username }}</td>
                <td>{% if commande.commande %}{{ commande.commande.totalTTC }} €{% endif %}</td>
                <td>
                    <a href="{{ path('pdf',{ 'commande':commande.id}) }}" target="_blank"><i class="icon-download"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
