{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Factures du client {{ user.username }}</h2>
    <hr>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Références</th>
            <th>Date</th>
            <th>Prix TTC</th>
            <th></th>
        </tr>
        </thead>
        <tbody>

            {% for facture in user.commandes %}
                <tr>
                    <td>ref: {{ facture.reference }}</td>
                    <td>{{ facture.date|date('d/m/y h:m:s') }}</td>
                    <td>{{ facture.commande.totalTTC }} €</td>
                    <td><a href="{{ path('pdf',{ 'commande':facture.id}) }}" target="_blank"><i class="icon-download"></i></a></td>
                </tr>
            {% endfor %}

        </tbody>
    </table>

    <br>
    <br>

    <a class="btn btn-primary" href="{{ path('adminUsers_index') }}">Retour</a>
{% endblock %}
