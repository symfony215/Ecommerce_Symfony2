{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Produits</h2>
    <hr>
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>PrixHT</th>
                <td>{{ produit.prixHT }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if produit.disponible %}Oui{% else %}Non{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary pull-left" href="{{ path('adminProduits_index') }}">Retour</a>
        </div>

        <div class="col-md-4">
            <a class="btn btn-success pull-right" href="{{ path('adminProduits_edit', { 'id': produit.id }) }}">Editer</a>
        </div>

        <div class="col-md-4">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger pull-right" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </div>

    </div>

{% endblock %}
