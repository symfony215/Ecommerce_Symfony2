{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>{{ 'products'|trans }}</h2>
    <hr>
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>{{ 'description'|trans }}</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>{{ 'price_ht'|trans }}</th>
                <td>{{ produit.prixHT }}</td>
            </tr>
            <tr>
                <th>D{{ 'available'|trans }}</th>
                <td>{% if produit.disponible %}{{ 'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary pull-left" href="{{ path('adminProduits_index') }}">{{ 'back'|trans }}</a>
        </div>

        <div class="col-md-4">
            <a class="btn btn-success pull-right" href="{{ path('adminProduits_edit', { 'id': produit.id }) }}">{{ 'edit'|trans }}</a>
        </div>

        <div class="col-md-4">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger pull-right" type="submit" value="{{ 'delete'|trans }}">
            {{ form_end(delete_form) }}
        </div>

    </div>

{% endblock %}
