{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Création de produits</h2>
    <hr>
    <div class="row">

        {{ form_start(form) }}

        <div class="form-group col-md-6">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
        </div>
        <div class="form-group  col-md-10">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>
        <div class="form-group col-md-7">
            {{ form_label(form.prixHT) }}
            {{ form_widget(form.prixHT) }}
        </div>

        <div class="checkbox col-md-7">
            <label>{{ form_widget(form.disponible) }}Disponible</label>
        </div>

        <div class="form-group col-md-10">
            {{ form_label(form.media) }}
            <div class="row well" style="padding-left: 4em">
                <div class="form-group col-md-10">
                    {{ form_label(form.media.file) }}
                    {{ form_widget(form.media.file,{'required':'required'}) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.media.name) }}
                    {{ form_widget(form.media.name) }}
                </div>
            </div>
        </div>
        <div class="form-group col-md-6">
            {{ form_label(form.tva) }}
            {{ form_widget(form.tva, {'attr': {'class' : 'form-control'}}) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.categorie) }}
            {{ form_widget(form.categorie, {'attr': {'class' : 'form-control'}}) }}
        </div>

        <input class="btn btn-success pull-right" type="submit" value="Créer" />

        {{ form_end(form) }}
    </div>

    <div class="row">
        <a href="{{ path('adminProduits_index') }}">Retour</a>
    </div>

{% endblock %}
