{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Création de catégories</h2>
    <hr>
    <div class="row">
        {{ form_start(form) }}
        <div class="form-group col-md-6">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
        </div>

        <div class="form-group col-md-12">
            {{ form_label(form.media) }}
            <div class="row well" style="padding-left: 4em">
                <div class="form-group col-md-12">
                    {{ form_label(form.media.file) }}
                    {{ form_widget(form.media.file,{'required':'required'}) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.media.name) }}
                    {{ form_widget(form.media.name) }}
                </div>
            </div>
        </div>
        <input class="btn btn-success pull-right" type="submit" value="Créer" />
        {{ form_end(form) }}
    </div>
    <div class="row">
        <a class="btn btn-primary pull-left" href="{{ path('adminCategories_index') }}">Retour</a>
    </div>
{% endblock %}
