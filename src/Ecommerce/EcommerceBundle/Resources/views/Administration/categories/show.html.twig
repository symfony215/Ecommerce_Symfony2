{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>{{ 'categories'|trans }}</h2>
    <hr>
    <div class="row">
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <td>{{ category.nom }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <a class="btn btn-primary pull-left" href="{{ path('adminCategories_index') }}">{{ 'back'|trans }}</a>
        </div>

        <div class="col-md-4">
            <a class="btn btn-success pull-right" href="{{ path('adminCategories_edit', { 'id': category.id }) }}">{{ 'edit'|trans }}</a>
        </div>

        <div class="col-md-4">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger pull-right" type="submit" value="{{ 'delete'|trans }}">
            {{ form_end(delete_form) }}
        </div>

    </div>

{% endblock %}
