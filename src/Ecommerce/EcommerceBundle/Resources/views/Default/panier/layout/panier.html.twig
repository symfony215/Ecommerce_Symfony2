{% extends '::layout/layout.html.twig' %}

{% block title %} - Panier{% endblock %}
{% block description %}panier contenant tous les produits commandés par le client.{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                {% include '::modulesUsed/navigation.html.twig' %}
            </div>

            {% set TotalHT = 0 %}
            {% set tva = 0 %}

            <div class="col-md-9">

                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                       {{ flashMessage }}
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    </div>
                {% endfor %}
                <h2>Votre parnier</h2>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Références</th>
                            <th>Quantité</th>
                            <th>Prix unitaire HT</th>
                            <th>Total HT</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>

                        {% if not produits %}

                            <td style="text-align: center" colspan="5">Pas de produits dans le panier.</td>

                        {% else %}
                        {% for produit in produits %}
                            <tr>
                                <td>{{ produit.nom }}</td>
                                <td>
                                    <form action="{{ path('ajouterAuPanier', {'id': produit.id}) }}" method="get">
                                        <label>
                                            <select name="qte" onchange="this.form.submit();">
                                                {% for i in 1..10 %}
                                                    <option value="{{ i }}" {% if i == panier[produit.id] %}selected{% endif %}>{{ i }}</option>
                                                {% endfor %}
                                            </select>
                                        </label>&nbsp;
                                    </form>
                                </td>
                                <td>{{ produit.prixHT }} €</td>
                                <td>{{ produit.prixHT * panier[produit.id] }} €</td>
                                <td><a href="{{ path('supprimerDuPanier',{ 'id': produit.id }) }}"><i class="icon-trash"></i></a></td>
                            </tr>

                            {% set TotalHT = TotalHT + (produit.prixHT * panier[produit.id]) %}
                            {% set tva = tva + (produit.prixHT * produit.tva.valeur * panier[produit.id] / 100)|round(2) %}
                        {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>

                {% if produits %}
                    <dl class="dl-horizontal pull-right">
                        <dt>Total HT :</dt>
                        <dd>{{ TotalHT }}€</dd>

                        <dt>TVA :</dt>
                        <dd>{{ tva }}€</dd>

                        <dt>Total TTC :</dt>
                        <dd>{{ TotalHT + tva|round(2) }}€</dd>
                    </dl>
                    <div class="clearfix"></div>
                    <a href="{{ path('livraison') }}" class="btn btn-success pull-right">Valider mon panier</a>
                {% endif %}
                <a href="{{ path('produits') }}" class="btn btn-primary">Continuer mes achats</a>

            </div>

        </div>
    </div>

{% endblock %}