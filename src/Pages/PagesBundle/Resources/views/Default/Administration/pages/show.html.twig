{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Pages</h2>
    <hr>
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ page.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ page.contenu|raw }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary" href="{{ path('adminPages_index') }}">Retour</a>
        </div>

        <div class="col-md-4">
            <a class="btn btn-success" href="{{ path('adminPages_edit', { 'id': page.id }) }}">Editer</a>
        </div>

        <div class="col-md-4">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </div>
    </div>


{% endblock %}
