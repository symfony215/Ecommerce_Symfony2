{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Liste des pages</h2>
    <hr>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.titre }}</td>
                <td>
                    <a href="{{ path('adminPages_show', { 'id': page.id }) }}"><i class="icon-eye-open"></i></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="{{ path('adminPages_edit', { 'id': page.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a class="btn btn-primary" href="{{ path('adminPages_new') }}"><i class="icon-star"></i>&nbsp;Cr√©er une nouvelle page</a>
{% endblock %}
