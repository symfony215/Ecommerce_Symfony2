{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger"><strong>Erreur ! </strong>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
    <div class="col-md-12">
        <h2>Connexion</h2>
        <hr>
        <div class="col-md-6">
            <h4>Pas encore inscrit ?</h4>
            <em>
                nous vous invitons à vous inscrire<br />
                afin de passer votre commande et de manger équilibré.
            </em>
            <br /><br />
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">S'inscrire</a>

        </div>

        <div class="col-md-6">
                    <h4>Connexion</h4>
                    <form action="{{ path("fos_user_security_check") }}" method="post">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                        <div class="form-group col-md-10">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" />
                        </div>

                        <div class="form-group col-md-10">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" id="password" name="_password" required="required" class="form-control" />
                        </div>

                        <div class="checkbox col-md-10">
                            <label><input type="checkbox" checked />{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <div class="col-md-10">
                            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        </div>

                    </form>
                </div>
        <div class="col-md-10">
                <a href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu ?</a>
        </div>
    </div>
</div>